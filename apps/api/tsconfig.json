{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "strictNullChecks": true,
      "module": "Node16",
      "moduleResolution": "Node16",
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "types": ["node", "mocha", "chai", "sinon"],
      "target": "es2017",
      "allowJs": false,
      "esModuleInterop": false,
      "declarationMap": true,
      "skipLibCheck": true,
      "paths": {
        "@/*": [
          "./src/*"
        ],
      }
    },
    "include": ["src","./src/**/*"],
    "exclude": ["./dist", "./node_modules"]
  }
